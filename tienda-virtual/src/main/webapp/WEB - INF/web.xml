<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         version="3.1">

    <!-- Pool -->
    <resource-ref>
        <res-ref-name>jdbc/tienda_virtual</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Listener -->
    <listener>
        <listener-class>com.jorge.listener.AppContextListener</listener-class>
    </listener>

    <!-- Servlets -->
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>com.jorge.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.jorge.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.jorge.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registro</servlet-name>
        <servlet-class>com.jorge.controller.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>

    <!-- Filtro -->
    <filter>
        <filter-name>authFilter</filter-name>
        <filter-class>com.jorge.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authFilter</filter-name>
        <url-pattern>/perfil</url-pattern>
    </filter-mapping>

    <!-- Errores -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error500.jsp</location>
    </error-page>

<servlet>
    <servlet-name>carrito</servlet-name>
    <servlet-class>com.jorge.controller.CarritoServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>carrito</servlet-name>
    <url-pattern>/carrito</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>pedido</servlet-name>
    <servlet-class>com.jorge.controller.PedidoServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>pedido</servlet-name>
    <url-pattern>/pedido</url-pattern>
</servlet-mapping>
<filter-mapping>
    <filter-name>authFilter</filter-name>
    <url-pattern>/pedido</url-pattern>
</filter-mapping>

<servlet>
    <servlet-name>misPedidos</servlet-name>
    <servlet-class>com.jorge.controller.MisPedidosServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>misPedidos</servlet-name>
    <url-pattern>/mis-pedidos</url-pattern>
</servlet-mapping>

<filter-mapping>
    <filter-name>authFilter</filter-name>
    <url-pattern>/mis-pedidos</url-pattern>
</filter-mapping>
</web-app>